#!/usr/bin/env bash

APP_ENV=dev

while getopts ":p" arg; do
  case $arg in
    p)
      APP_ENV=prod
      ;;
  esac
done

shift $((OPTIND - 1))

dc () {
  docker-compose \
    --env-file $APP_ENV.env \
    -p waldo_app_$APP_ENV \
    --file docker/$APP_ENV/docker-compose.yml \
    $@ 
}

run () {
  dc run --rm $@
}

if [ $1 ]; then
  case $1 in
    run)
      shift
      run "$@"
      ;;
    rails)
      shift
      run api bin/rails "$@"
      ;;
    api | web | redis | db)
      run "$@"
      ;;
    *)
      dc "$@"
      ;;
  esac
else
  docker-compose --help
fi
